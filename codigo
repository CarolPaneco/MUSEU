        		if(strcmp(continuar,"s")==0)
        		{
        			pesquisar_entrada();
				}
				else if(strcmp(continuar,"n")==0)
				{
					return;
				}
				else
				{
					printf("\nNumero invalido, responda novamente\n");
				}
			}

	}
	fclose (vendas);
}

void relatorio_venda()
{
	FILE*vendas;
	int escolha;
	int escolha_idade;
	char continuar[2];
	
	int criancas = 0;
    		int adolescentes = 0;
    		int jovensAdultos = 0;
    		int adultos = 0;
    		int terceiraIdade = 0;
    		int feminino = 0;
				int masculino = 0;
				int anonimo = 0;
				
				
		int estudante = 0;
				int nao_estudante = 0;
				
				int pcd = 0;
				int nao_pcd = 0;
				
				int associado = 0;
				int nao_associado = 0;
				
				int exposicao1_vendas = 0;
				int exposicao2_vendas = 0;
				int exposicao3_vendas = 0;
				int exposicao4_vendas = 0;
				
				float exposicao1_valor = 0.0;
				float exposicao2_valor = 0.0;
				float exposicao3_valor = 0.0;
				float exposicao4_valor = 0.0;
				
				
				
				
    		
    		
	vendas = fopen("venda.txt", "r");
	
	if (vendas == NULL)
	{
		printf("Erro ao abrir arquivo.");
	}
	else
	{	
		system("cls");
		top();
        printf("---------RELATORIO DE VENDAS---------\n");
		
		printf("\n\n1-IDADE.");
		printf("\n2-GENERO.");
		printf("\n3-ESTUDANTE.");
		printf("\n4-PCD.");
		printf("\n5-ASSOCIADOS.");
		printf("\n6-EXPOSICAO.");
		printf("\n7-Listagem de todas as vendas.");
		printf("\nEscolha: ");
		scanf("%i", &escolha);
		
		switch(escolha)
		{	
		
			

			case 1: 
			

    		
    		while (fscanf(vendas, "%i", vd[i].vidade) == 1) 
			{
			    if (vd[i].vidade <= 12) 
				{
			        criancas++;
			    } 
				else if (vd[i].vidade <= 18)
				{
			        adolescentes++;
			    } 
				else if (vd[i].vidade <= 30) 
				{
			        jovensAdultos++;
			    } 
				else if (vd[i].vidade <= 55) 
				{
			        adultos++;
			    } 
				else 
				{
			        terceiraIdade++;
			    }
			}
			
			system("cls");
			top();
        	printf("---------RELATORIO DE VENDAS---------\n");
        	printf("---------------IDADE-----------------\n\n");
        	printf("Crianças (0 a 12 anos): %d vendas\n", criancas);
		    printf("Adolescentes (12 a 18 anos): %d vendas\n", adolescentes);
		    printf("Jovens Adultos (18 a 30 anos): %d vendas\n", jovensAdultos);
		    printf("Adultos (30 a 55 anos): %d vendas\n", adultos);
		    printf("Terceira Idade (55+ anos): %d vendas\n", terceiraIdade);
		    
		    while (1)
        	{
        		printf("\n\nDeseja verificar mais algum tipo?(s/n)  ");
        		scanf("%s", &continuar);
        		
        		if(strcmp(continuar,"s")==0)
        		{
        			relatorio_venda();
				}
				else if(strcmp(continuar,"n")==0)
				{
					return;
				}
				else
				{
					printf("\nNumero invalido, responda novamente\n");
				}
			}
			break;
				
			case 2:
				
				
				
				while (fscanf(vendas, "%s", vd[i].vgenero) == 1) 
				{
				    if (strcmp(vd[i].vgenero, "Feminino") == 0) 
					{
				        feminino++;
				    } 
					else if (strcmp(vd[i].vgenero, "Masculino") == 0) 
					{
				        masculino++;
				    } 
					else 
					{
				        anonimo++;
				    }
				}
				
			system("cls");
			top();
        	printf("---------RELATORIO DE VENDAS---------\n");
        	printf("---------------GENERO-----------------\n\n");
        	printf("Masculino: %d vendas\n", masculino);
		    printf("Femenino: %d vendas\n", feminino);
		    printf("Anonimo: %d vendas\n", anonimo);
		    
		    while (1)
        	{
        		printf("\n\nDeseja verificar mais algum tipo?(s/n)  ");
        		scanf("%s", &continuar);
        		
        		if(strcmp(continuar,"s")==0)
        		{
        			relatorio_venda();
				}
				else if(strcmp(continuar,"n")==0)
				{
					return;
				}
				else
				{
					printf("\nNumero invalido, responda novamente\n");
				}
			}
			
			break;
				
				case 3:
				
	
				
				while (fscanf(vendas, "%s", vd[i].vestudante) == 1) 
				{
				    if (strcmp(vd[i].vestudante, "Estudante") == 0) 
					{
				        estudante++;
				    }  
					else 
					{
				        nao_estudante++;
				    }
				}
				
			system("cls");
			top();
        	printf("---------RELATORIO DE VENDAS---------\n");
        	printf("---------------ESTUDANTE-----------------\n\n");
        	printf("Estudante: %d vendas\n", estudante);
		    printf("Nao estudante: %d vendas\n", nao_estudante);
		    
		    while (1)
        	{
        		printf("\n\nDeseja verificar mais algum tipo?(s/n)  ");
        		scanf("%s", &continuar);
        		
        		if(strcmp(continuar,"s")==0)
        		{
        			relatorio_venda();
				}
				else if(strcmp(continuar,"n")==0)
				{
					return;
				}
				else
				{
					printf("\nNumero invalido, responda novamente\n");
				}
			}
			
			break;
				
				case 4:
				
				
				
				while (fscanf(vendas, "%s", vd[i].vpcd) == 1) 
				{
				    if (strcmp(vd[i].vpcd, "PCD") == 0) 
					{
				        pcd++;
				    }  
					else 
					{
				        nao_pcd++;
				    }
				}
				
			system("cls");
			top();
        	printf("---------RELATORIO DE VENDAS---------\n");
        	printf("---------------PCD-----------------\n\n");
        	printf("PCD: %d vendas\n", pcd);
		    printf("Nao PCD: %d vendas\n", nao_pcd);
		    
		    while (1)
        	{
        		printf("\n\nDeseja verificar mais algum tipo?(s/n)  ");
        		scanf("%s", &continuar);
        		
        		if(strcmp(continuar,"s")==0)
        		{
        			relatorio_venda();
				}
				else if(strcmp(continuar,"n")==0)
				{
					return;
				}
				else
				{
					printf("\nNumero invalido, responda novamente\n");
				}
			}
			
			break;
				
				case 5:
				
				
				
				while (fscanf(vendas, "%s", vd[i].vassociado) == 1) 
				{
				    if (strcmp(vd[i].vassociado, "Associado") == 0) 
					{
				        associado++;
				    }  
					else 
					{
				        nao_associado++;
				    }
				}
				
			system("cls");
			top();
        	printf("---------RELATORIO DE VENDAS---------\n");
        	printf("---------------ASSOCIADO-----------------\n\n");
        	printf("Estudante: %d vendas\n", associado);
		    printf("Nao estudante: %d vendas\n", nao_associado);
		    
		    while (1)
        	{
        		printf("\n\nDeseja verificar mais algum tipo?(s/n)  ");
        		scanf("%s", &continuar);
        		
        		if(strcmp(continuar,"s")==0)
        		{
        			relatorio_venda();
				}
				else if(strcmp(continuar,"n")==0)
				{
					return;
				}
				else
				{
					printf("\nNumero invalido, responda novamente\n");
				}
			}
			
			break;
			
			case 6:
				
			
				
				
				while (fscanf(vendas, "%s", vd[i].vexposicao) == 1) 
				{
				    if (strcmp(vd[i].vexposicao, "100 anos da semana da arte moderna") == 0)
					{
				        exposicao1_vendas++;
				        exposicao1_valor += 20.0; 
				    } 
					else if (strcmp(vd[i].vexposicao, "150 anos de Santos Drumont") == 0) 
					{
				        exposicao2_vendas++;
				        exposicao2_valor += 30.0; 
				    } 
					else if (strcmp(vd[i].vexposicao, "Jogos Olimpicos de Paris 2024") == 0) 
					{
				        exposicao3_vendas++;
				        exposicao3_valor += 40.0; 
				    } 
					else if (strcmp(vd[i].vexposicao, "Inteligencia artificial") == 0) 
					{
				        exposicao4_vendas++;
				        exposicao4_valor += 50.0; 
				    }
				}
				system("cls");
				top();
	        	printf("---------RELATORIO DE VENDAS---------\n");
	        	printf("---------------EXPOSICAO-----------------\n\n");
				printf("Relatório de Vendas por Exposição:\n");
				printf("100 anos da semana da arte moderna: %d vendas, Total: R$ %.2f\n", exposicao1_vendas, exposicao1_valor);
				printf("150 anos de Santos Drumont: %d vendas, Total: R$ %.2f\n", exposicao2_vendas, exposicao2_valor);
				printf("Jogos Olimpicos de Paris 2024: %d vendas, Total: R$ %.2f\n", exposicao3_vendas, exposicao3_valor);
				printf("Inteligencia artificial: %d vendas, Total: R$ %.2f\n", exposicao4_vendas, exposicao4_valor);

					    
		    while (1)
        	{
        		printf("\n\nDeseja verificar mais algum tipo?(s/n)  ");
        		scanf("%s", &continuar);
        		
        		if(strcmp(continuar,"s")==0)
        		{
        			relatorio_venda();
				}
				else if(strcmp(continuar,"n")==0)
				{
					return;
				}
				else
				{
					printf("\nNumero invalido, responda novamente\n");
				}
			}
			
			break;
			
			case 7:
				
				system("cls");
				top();
	        	printf("---------RELATORIO DE VENDAS---------\n");
	        	printf("---------------LISTA-----------------\n\n");
	
	        char nome[100];
	        char cpf[15];
	        char beneficio_idade[50];
	        char genero[10];
	        char estudante[20];
	        char pcd[10];
	        char associado[20];
	        int valor;
	
	        while (fscanf(vendas, "%s %s %s %s %s %s %s %s %i", vd[i].vnome, vd[i].vcpf, vd[i].beneficio_idade, vd[i].vgenero, vd[i].vestudante, vd[i].vpcd, vd[i].vassociado, vd[i].vpreco ) != EOF)
	        {
	            printf("Nome: %s\n", vd[i].vnome);
	            printf("CPF: %s\n", vd[i].vcpf);
	            printf("%s\n", vd[i].beneficio_idade);
	            printf("Genero: %d\n", vd[i].vgenero);
	            printf("Gênero: %s\n", genero);
	            printf("Estudante: %s\n", vd[i].vestudante);
	            printf("PCD: %s\n", vd[i].vpcd);
	            printf("Associado: %s\n", vd[i].vassociado);
	            printf("Preco: %s\n", vd[i].vpreco);
	            printf("\n------------------------------------\n");
	        }
	        
	        while (1)
        	{
        		printf("\n\nDeseja verificar mais algum tipo?(s/n)  ");
        		scanf("%s", &continuar);
        		
        		if(strcmp(continuar,"s")==0)
        		{
        			relatorio_venda();
				}
				else if(strcmp(continuar,"n")==0)
				{
					return;
				}
				else
				{
					printf("\nNumero invalido, responda novamente\n");
				}
			}
			
			break;
				
		}

	}
	fclose (vendas);
}

void relatorio_avaliacoes()
{
	FILE*avaliacao;
	
	avaliacao = fopen ("avaliacoes.txt", "r");
	
	if (avaliacao == NULL)
	{
		printf("Erro ao entrar no arquivo!");
	}
	else
	{
		
		system("cls");
		top();
		printf("---------RELATORIO DE AVALIACAO---------\n\n");
		
		
		char nome[50];
        char cpf[15];
        char genero[10];
        int idade;
        float gostou;
		float util;
		float recomenda;
		char exposicao[50];
		
		strcpy(vd[i].vnome, ad[i].nome);
		strcpy(vd[i].vcpf, ad[i].cpf);
		strcpy(vd[i].vgenero, ad[i].genero);
		vd[i].vidade = ad[i].idade;

        while (fscanf(avaliacao, "%s %s %s %d %s %f %f %f", ad[i].nome, ad[i].cpf, ad[i].genero, ad[i].idade, ad[i].exposicao, ad[i].gostou, ad[i].util, ad[i].recomenda) != EOF)
        {
            
            printf("Nome: %s\n", ad[i].nome);
            printf("CPF: %s\n", ad[i].cpf);
            printf("Idade: %d\n", ad[i].idade);
            printf("Gênero: %s\n", ad[i].genero);
			printf("Exposicao avaliada: %s", ad[i].exposicao);
			printf("Gostou: %2.f", ad[i].gostou);
			printf("Util: %2.f", ad[i].util);
			printf("Recomenda: %2.f", ad[i].recomenda);
            printf("\n------------------------------------\n");
        }
		
		
		
	}
	fclose(avaliacao);
}

void pesquisa_avaliacao()
{
	FILE*avaliacao;
	int escolha;
	char continuar[2];
	
	avaliacao = fopen ("avaliacoes.txt", "r");
	
	if (avaliacao == NULL)
	{
		printf("Erro ao entrar no arquivo!");
	}
	else
	{
		
		system("cls");
		top();
		printf("---------PESQUISA DE AVALIACAO---------\n\n");
		
		printf("\n1-'100 anos da semana de arte moderna'.\n2-'150 anos de Santos Drumont'.\n3-'Jogos Olimpicos de Paris 2024'.\n4-'Inteligencia artificial'.\n5-Voltar.\nQual exposicao deseja ver as avaliacoes? ");
		scanf("%i", &escolha);
		
		switch(escolha)
		{
			case 1: 
				system("cls");
			top();
			printf("---------PESQUISA DE AVALIACAO---------\n\n");
			while(fscanf(avaliacao,"%s %f %f %f", ad[i].exposicao,ad[i].gostou, ad[i].util, ad[i].recomenda)!= EOF)
			{
				if (strcmp(ad[i].exposicao,"100 anos da semana de arte moderna")==0)
				printf("Voce escolheu ver as avaliacoes de 100 anos da semana de arte moderna.\n\n");
				printf("Gostou: %2.f", ad[i].gostou);
				printf("Util: %2.f", ad[i].util);
				printf("Recomenda: %2.f", ad[i].recomenda);
				
				while (1)
				{
					printf("Deseja ver avaliacoes de outras exposicoes?(s/n) ");
					scanf("%s", &continuar);
					
					if(strcmp(continuar, "s")==0)
					{
						pesquisa_avaliacao();
					}
					else if(strcmp(continuar, "n")==0)
					{
						return;
					}
					else
					{
						printf("Caractere invalido, escolha outro!\n");
					}
				}
			}
				
			break;
				
				case 2: 
				system("cls");
			top();
			printf("---------PESQUISA DE AVALIACAO---------\n\n");
			while(fscanf(avaliacao,"%s %f %f %f", ad[i].exposicao,ad[i].gostou, ad[i].util, ad[i].recomenda)!= EOF)
			{
				if (strcmp(ad[i].exposicao,"'150 anos de Santos Drumont'")==0)
				printf("Voce escolheu ver as avaliacoes de 150 anos de Santos Drumont.\n\n");
				printf("Gostou: %2.f", ad[i].gostou);
				printf("Util: %2.f", ad[i].util);
				printf("Recomenda: %2.f", ad[i].recomenda);
				
				while (1)
				{
					printf("Deseja ver avaliacoes de outras exposicoes?(s/n) ");
					scanf("%s", &continuar);
					
					if(strcmp(continuar, "s")==0)
					{
						pesquisa_avaliacao();
					}
					else if(strcmp(continuar, "n")==0)
					{
						return;
					}
					else
					{
						printf("Caractere invalido, escolha outro!\n");
					}
				}
			}
				
			break;
				
				case 3: 
				system("cls");
			top();
			printf("---------PESQUISA DE AVALIACAO---------\n\n");
			while(fscanf(avaliacao,"%s %f %f %f", ad[i].exposicao,ad[i].gostou, ad[i].util, ad[i].recomenda)!= EOF)
			{
				if (strcmp(ad[i].exposicao,"'Jogos Olimpicos de Paris 2024'")==0)
				printf("Voce escolheu ver as avaliacoes de Jogos Olimpicos de Paris 2024.\n\n");
				printf("Gostou: %2.f", ad[i].gostou);
				printf("Util: %2.f", ad[i].util);
				printf("Recomenda: %2.f", ad[i].recomenda);
				
				while (1)
				{
					printf("Deseja ver avaliacoes de outras exposicoes?(s/n) ");
					scanf("%s", &continuar);
					
					if(strcmp(continuar, "s")==0)
					{
						pesquisa_avaliacao();
					}
					else if(strcmp(continuar, "n")==0)
					{
						return;
					}
					else
					{
						printf("Caractere invalido, escolha outro!\n");
					}
				}
			}
				
			break;
			
			case 4: 
				system("cls");
			top();
			printf("---------PESQUISA DE AVALIACAO---------\n\n");
			while(fscanf(avaliacao,"%s %f %f %f", ad[i].exposicao,ad[i].gostou, ad[i].util, ad[i].recomenda)!= EOF)
			{
				if (strcmp(ad[i].exposicao,"'Inteligencia artificial'")==0)
				printf("Voce escolheu ver as avaliacoes de Inteligencia artificial.\n\n");
				printf("Gostou: %2.f", ad[i].gostou);
				printf("Util: %2.f", ad[i].util);
				printf("Recomenda: %2.f", ad[i].recomenda);
				
				while (1)
				{
					printf("Deseja ver avaliacoes de outras exposicoes?(s/n) ");
					scanf("%s", &continuar);
					
					if(strcmp(continuar, "s")==0)
					{
						pesquisa_avaliacao();
					}
					else if(strcmp(continuar, "n")==0)
					{
						return;
					}
					else
					{
						printf("Caractere invalido, escolha outro!\n");
					}
				}
			}
				
			break;
			
			case 5: 
				system("cls");
			top();
			printf("---------PESQUISA DE AVALIACAO---------\n\n");
			printf("Voltando em segundos...");
			sleep(2);
			return;
				
			break;
		}
		
		
	
		
		
		
	}
	fclose(avaliacao);
}
