						else
						{
							printf("\nCaractere invalido, responda novamente!");
						}
						
					}
					
					break;
			}
				
				
			break;
			
			case 4:
				
				system ("cls");
				top();
			printf("-------------EXPOSICOES-------------\n\n");
			printf("A Inteligencia Artificial (IA) tem uma historia rica e fascinante que remonta as decadas de 1940 e 1950, quando pioneiros como Alan Turing comecaram a explorar a ideia de maquinas capazes de replicar o pensamento humano. Desde entao, a IA evoluiu significativamente, passando por marcos como o nascimento oficial do termo Inteligencia Artificial em 1956 e o desenvolvimento de sistemas especializados nas decadas posteriores.");
			printf("\n\n1-Decadas de 1940 e 1950.\n2-1956 - O Nascimento da IA.\n3-O Teste de Turing.\n4-Decadas Posteriores.\nEscolha um: \n");
			scanf("%i", &escolha2);
			
			switch(escolha2)
			{
				case 1:
			
					system ("cls");
					top();
					printf("-------------EXPOSICOES-------------\n\n");
					printf("Decadas de 1940 e 1950: Durante esse periodo, visionarios como Alan Turing e John von Neumann comecaram a explorar maquinas que poderiam replicar o pensamento humano. Alan Turing formalizou o conceito de algoritmo e estabeleceu as bases conceituais para o desenvolvimento da IA.");			
					sleep(1);
					while (1)
					{
						printf("\n\nDeseja ver mais um resumo das exposicoes?(s/n)");
						scanf("%s", &continuar);
						
						if (strcmp(continuar,"s")==0)
						{
							exposicoes();
						}
						else if (strcmp(continuar,"n")==0)
						{
							return;
						}
						else
						{
							printf("\nCaractere invalido, responda novamente!");
						}
						
					}
					
					break;
					
					case 2:
			
					system ("cls");
					top();
					printf("-------------EXPOSICOES-------------\n\n");
					printf("1956 - O Nascimento da IA: O termo Inteligencia Artificial foi oficialmente cunhado em 1956 por John McCarthy, marcando o inicio da disciplina da IA como uma area de pesquisa formal. A conferencia de Dartmouth College desempenhou um papel crucial nesse marco.");			
					sleep(1);
					while (1)
					{
						printf("\n\nDeseja ver mais um resumo das exposicoes?(s/n)");
						scanf("%s", &continuar);
						
						if (strcmp(continuar,"s")==0)
						{
							exposicoes();
						}
						else if (strcmp(continuar,"n")==0)
						{
							return;
						}
						else
						{
							printf("\nCaractere invalido, responda novamente!");
						}
						
					}
					
					break;
					
					case 3:
			
					system ("cls");
					top();
					printf("-------------EXPOSICOES-------------\n\n");
					printf("O Teste de Turing: Alan Turing propÃ´s o Teste de Turing em 1950 para avaliar o comportamento inteligente de maquinas. Esse teste continua sendo um topico central na IA.")		;	
					sleep(1);
					while (1)
					{
						printf("\n\nDeseja ver mais um resumo das exposicoes?(s/n)");
						scanf("%s", &continuar);
						
						if (strcmp(continuar,"s")==0)
						{
							exposicoes();
						}
						else if (strcmp(continuar,"n")==0)
						{
							return;
						}
						else
						{
							printf("\nCaractere invalido, responda novamente!");
						}
						
					}
					break;
					
					case 4:
			
					system ("cls");
					top();
					printf("-------------EXPOSICOES-------------\n\n");
					printf("Decadas Posteriores: A IA evoluiu ao longo das decadas, com o desenvolvimento de sistemas de processamento de linguagem natural, sistemas especializados como o MYCIN na decada de 1970 e, mais recentemente, o renascimento da IA impulsionado por avancos em aprendizado de maquina e poder computacional.");			
					sleep(1);
					while (1)
