}

void entrada()
{
    FILE *vendas;
    char cpf[15];
    int quantidade1;

    vendas = fopen("venda.txt", "r");
    quantidade1 = vd[i].quantidade;

    if (vendas == NULL)
    {
        printf("Erro na abertura do arquivo.\n");
    }
    else
    {
        top();
        printf("\n----------ENTRADA---------\n");
        printf("Digite seu CPF: ");
        scanf("%s", cpf);
		
        int preco_final = 0;

        // Loop para calcular o preço final
        for (int i = 0; i < quantidade1; i++)
        {
            printf("\nCompra %d:\n", i + 1);
            printf("Exposicao escolhida: %s\n", vd[i].vexposicao);

            if (strcmp(vd[i].vexposicao, "100 anos da semana da arte moderna") == 0)
            {	
            
                preco_final += 20;
            }
            else if (strcmp(vd[i].vexposicao, "'150 anos de Santos Drumont'") == 0)
            {
            	
                preco_final += 30;
            }
            else if (strcmp(vd[i].vexposicao, "'Jogos Olimpicos de Paris 2024'") == 0)
            {
            	
                preco_final += 40;
            }
            else if (strcmp(vd[i].vexposicao, "'Inteligencia artificial'") == 0)
            {
            	
                preco_final += 50;
            }
        }
        
        
		
        
        printf("\nValor final: %i\n", preco_final);
        
		
		
		if (strcmp(vd[i].vassociado,"Associado")==0)
		{
			preco_final  = 0; 
			vd[i].vpreco = preco_final;
        fprintf(vendas,"%i",vd[i].vpreco);
        fprintf(vendas,"|");
		
			printf("Beneficio: ASSOCIADO/ISENTO\n");
			printf("Valor com desconto: %i", preco_final);
		}
		else if (strcmp(vd[i].beneficio_idade,"Menor de idade")==0)
		{
			preco_final = preco_final / 2;
			vd[i].vpreco = preco_final;
        fprintf(vendas,"%i",vd[i].vpreco);
        fprintf(vendas,"|");
		
			printf("Beneficio: MENOR DE 18 ANOS/MEIA ENTRADA\n");
			printf("Valor com desconto: %i", preco_final);
		}
		else if (strcmp(vd[i].beneficio_idade,"Maior idade")==0)
		{
			preco_final = preco_final / 2;
			
			vd[i].vpreco = preco_final;
        fprintf(vendas,"%i",vd[i].vpreco);
        fprintf(vendas,"|");
		
			printf("Beneficio: MAIOR DE 65 ANOS/MEIA ENTRADA\n");
			printf("Valor com desconto: %i", preco_final);
		}
		else if(strcmp(vd[i].vestudante,"Estudante")==0)
		{
			preco_final = preco_final / 2;
			
			vd[i].vpreco = preco_final;
        fprintf(vendas,"%i",vd[i].vpreco);
        fprintf(vendas,"|");
			printf("Beneficio: ESTUDANTE/MEIA ENTRADA\n");
			printf("Valor com desconto: %i", preco_final);
		}
		else if(strcmp(vd[i].vpcd,"PCD")==0)
		{
			preco_final = preco_final / 2;
			vd[i].vpreco = preco_final;
        fprintf(vendas,"%i",vd[i].vpreco);
        fprintf(vendas,"|");
			printf("Beneficio: PCD/MEIA ENTRADA\n");
			printf("Valor com desconto: %i", preco_final);
		}
		else;
		
		printf("\n\nUma otima exposicao! Nao esqueca de avaliar apos! :)");
		
		printf("\nEm 5 segundos voltaremos ao menu!");
		sleep(5);
		return;
        
    }
    fclose (vendas);
}


void acesso_ti()
{
	FILE*cadastros,*vendas, *avaliacao;
	
	int senha = 064775;
	int tentativas = 3;
	int tentsenha;
	int escolha;
	
	cadastros = fopen ("cadastro_cliente.txt", "r");
	vendas = fopen ("venda.txt", "r");
	avaliacao = fopen ("avaliacoes.txt", "r");
	
	if (cadastros == NULL)
	{
		printf("Erro ao abrir arquivo cadastros.");
		sleep(5);
	}
	else 
	{
		if (vendas == NULL)
		{
		printf("Erro ao abrir arquivo vendas.");
		sleep(5);
		}
		else
		{
			if (avaliacao == NULL)
			{
				printf("Erro ao abrir arquivo avaliacao.");
			sleep(5);
			}
			else
			{
				system ("cls");
				top();
				printf("---------ACESSO TI-------\n\n");
				
				
				while (tentativas > 0)
				{
					
					printf("Coloque a senha para acesso ao TI: ");
					scanf("%i", &tentsenha);
						
						if(tentsenha == senha)
						{
							printf("Senha correta!\n");
							sleep(2);
							break;
						}
						else 
						{
							tentativas--;
							if (tentativas > 0) 
							{
				                printf("Senha incorreta. Tente novamente. Restam %d tentativas.\n", tentativas);
				            } 
							else 
							{
				                printf("Tentativas esgotadas. A senha esta bloqueada.\n");
				                return;
				            }
						}
				}//while
				system ("cls");
				top();
				printf("---------ACESSO TI-------\n\n");
				printf("1-Listar cadastros.\n2-Pesquisar cliente.\n3-Pesquisar enttrada.\n4-Relatorio vendas.\n5-Relatorio avaliacoes.\n6-Pesquisar avaiacao.\n");
				printf("Escolha: ");
				scanf("%i", &escolha);
				
				switch (escolha)
				{
					case 1:
						listar();
					break;
					
					case 2:
						pesquisar_cadastro();
					break;
					
					case 3:
						pesquisar_entrada();
					break;
					
					case 4:
						relatorio_venda();
					break;
					
					case 5:
						relatorio_avaliacoes();
					break;
				}
				
			}//avaliacao
		}//vendas
	}//cadastros
	fclose (avaliacao);
	fclose (vendas);
	fclose (cadastros); 
}

void listar()
{
	FILE*cadastros;
	
	cadastros = fopen("cadastro_cliente.txt", "r");
	
	if (cadastros == NULL)
	{
		printf("Erro ao abrir arquivo.");
	}
	else
	{
		top();
        printf("---------LISTA DE CADASTROS---------\n");

        // Variáveis para armazenar os dados lidos
        char nome[100];
        char cpf[15];
        char telefone[20];
        int idade;
        char beneficio_idade[50];
        char genero[10];
        char estudante[20];
        char pcd[10];
        char associado[20];

        // Loop para ler e exibir os registros
        while (fscanf(cadastros, "%s","%s","%s","%i","%s","%s","%s","%s","%s", nome, cpf, telefone, idade, beneficio_idade, genero, estudante, pcd, associado) != EOF)
		
        {
            // Exibe os dados do cadastro na tela
            printf("Nome: %s\n", nome);
            printf("CPF: %s\n", cpf);
            printf("Telefone: %s\n", telefone);
            printf("Idade: %d\n", idade);
            printf("Benefício de idade: %s\n", beneficio_idade);
            printf("Gênero: %s\n", genero);
            printf("Estudante: %s\n", estudante);
            printf("PCD: %s\n", pcd);
            printf("Associado: %s\n", associado);
            printf("\n------------------------------------\n");
        }
        sleep(5);
	}
	fclose (cadastros);
}

void pesquisar_cadastro()
{
	FILE*cadastros;
	char cpf[15];
	char continuar[2];
	
	cadastros = fopen("cadastro_cliente.txt", "r");
	
	if (cadastros == NULL)
	{
		printf("Erro ao abrir arquivo.");
		sleep(2);
	}
	else
	{
		top();
        printf("---------PESQUISA DE CADASTRO---------\n");

        printf("Digite o CPF do cliente desejado: ");
        scanf("%s", &cpf);
        
        if(strcmp(cpf, cd[i].cpf)==0)
        {
        	printf("\nNome: %s",cd[i].nome);
        	printf("\nCPF: %s",cd[i].cpf);
        	printf("\nIdade: %i",cd[i].idade);
        	printf("\nTem alguma beneficio de idade? %s",cd[i].beneficio_idade);
        	printf("\nGenero: %s",cd[i].genero);
        	printf("\n%s",cd[i].estudante);
        	printf("\n%s",cd[i].pcd);
        	printf("\n%s",cd[i].associado);
        	
        	while (1)
        	{
        		printf("\n\nDeseja pesquisar mais algum cadastros?(s/n)  ");
        		scanf("%s", &continuar);
        		
        		if(strcmp(continuar,"s")==0)
        		{
        			pesquisar_cadastro();
				}
				else if(strcmp(continuar,"n")==0)
				{
					return;
				}
				else
				{
					printf("\nNumero invalido, responda novamente\n");
				}
			}
        	
        	
		}
	}
	fclose (cadastros);
}

void pesquisar_entrada()
{
	
	FILE*vendas;
	char cpf[15];
	char continuar[2];
	int quantidade1;
	
	vendas = fopen("venda.txt", "r");
	
	if (vendas == NULL)
	{
		printf("Erro ao abrir arquivo.");
	}
	else
	{
		top();
        printf("\n----------PESQUISA DE ENTRADA---------\n");
        printf("Digite seu CPF: ");
        scanf("%s", cpf);
		
        int preco_final = 0;
		quantidade1 = vd[i].quantidade;
        // Loop para calcular o preço final
        for (int i = 0; i < quantidade1; i++)
        {
            printf("\nCompra %d:\n", i + 1);
            printf("Exposicao escolhida: %s\n", vd[i].vexposicao);

            if (strcmp(vd[i].vexposicao, "100 anos da semana da arte moderna") == 0)
            {	
            
                preco_final += 20;
            }
