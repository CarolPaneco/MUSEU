typedef struct//cadastro
{
	char nome[30];
	char cpf[11];
	int idade; 
	char telefone[15];
	char genero[15];
	char estudante[20];
	char pcd[20];
	char associado[20];
	char beneficio_idade[20];
}CD;

CD cd[100];

  typedef struct//vendas
{
	char vnome[30];
	char vcpf[15];
	int vidade; 
	char vtelefone[15];
	char vgenero[15];
	char vestudante[20];
	char vpcd[20];
	char vassociado[20];
	int vpreco;
	char vexposicao[100];
	char beneficio_idade[20];
	int escolha;
	int quantidade;
	char exposicao_escolhi[100];
	int valorfinal;
}VD;

VD vd[100];

typedef struct
{
	float gostou;
	float util;
	float recomenda;
	char cpf[15];
	char exposicao[50];
	char nome[50];
	int idade;
	char genero[10];
	
}AD;

AD ad[100];

int main()//main
{
    int i = 0;
    
	setlocale(LC_ALL, "Portuguese");
	
	int opcao;
	
	do
	{
              system("cls");
        top();
        printf("1-Cadastre-se\n");
        printf("2-Bilheteria.\n");
        printf("3-Exposicoes.\n");
        printf("4-Entrada.\n");
        printf("5-Avaliacao.\n");
        printf("6-Acesso TI.\n");
        printf("7-Sair.\n");
        printf("Escolha uma opcao acima! :)\n");
        scanf("%d", &opcao);
        
        switch(opcao)
        {
        	case 1:
        		cadastrar();
        	break;
		
			case 2: 
				bilheteria();
			break;
			
			case 3:
				exposicoes();
			break;
			
			case 4:
				entrada();
			break;
				
			case 5:
				avaliar();
			break;
			
			case 6:
				acesso_ti();
			break;
		}
        
	}while(opcao!=7);
	return 0;
}

void top()//cabecalho
{
	system("cls");
    printf("--------------------------------\n");
    printf("          MUSEU CJHBT         \n");
    printf("--------------------------------\n\n");
}	

void cadastrar()//cadastros dos clientes
{
	FILE*cadastros;

	int i = 0;
	int genero1;
	char estudante1[2];
	char pcd1[2];
	char associado1[2];
	
	cadastros = fopen ("cadastro_cliente.txt", "a");
	
	if(cadastros == NULL)
	{
		printf("Falha na abertura do arquivo!");
	}
	else
	{
		
			system("cls");
			top();
			printf("-----------CADASTRO-----------\n");
			printf("Digite seu nome: ");
			scanf("%s", &cd[i].nome);//nome
			fprintf(cadastros,"%s",cd[i].nome);
			fprintf(cadastros,"|");
			
			printf("\nDigite seu CPF: ");//cpf
			scanf("%s", &cd[i].cpf);
			fprintf(cadastros,"%s",cd[i].cpf);
			fprintf(cadastros,"|");
			
			printf("\nDigite seu telefone: ");//telefone
			scanf("%s", &cd[i].telefone);
			fprintf(cadastros, "%s", cd[i].telefone);
			fprintf(cadastros,"|");
			
			printf("\nDigite sua idade: ");
			scanf("%i", &cd[i].idade);
			fprintf(cadastros, "%i", cd[i].idade);
			fprintf(cadastros,"|");
			
				if (cd[i].idade <18)//menor idade
				{
					snprintf(cd[i].beneficio_idade, sizeof(cd[i].beneficio_idade), "Menor de idade");
					fprintf(cadastros,"%s", cd[i].beneficio_idade);
					fprintf(cadastros,"|");
				}
				else if (cd[i].idade >= 65)//maior idade
				{
					snprintf(cd[i].beneficio_idade, sizeof(cd[i].beneficio_idade), "Maior idade");
					fprintf(cadastros,"%s", cd[i].beneficio_idade);
					fprintf(cadastros,"|");
				}
				else//sem beneficio idade
				{
					snprintf(cd[i].beneficio_idade, sizeof(cd[i].beneficio_idade), "Sem beneficio idade");
					fprintf(cadastros,"%s", cd[i].beneficio_idade);
					fprintf(cadastros,"|");
				}
				
			
			while(1)//genero
			{
				printf("\n\n1-Masculino\n2-Feminio\n3-Nao quero iformar\nDigite seu genero: ");
			scanf("%i", &genero1);
			if (genero1 == 1)
			{
				snprintf(cd[i].genero, sizeof(cd[i].genero), "Masculino");
				fprintf(cadastros,"%s", cd[i].genero);
				fprintf(cadastros,"|");
				break;
			}
			else if(genero1 == 2)
			{
				snprintf(cd[i].genero, sizeof(cd[i].genero), "Feminino");
				fprintf(cadastros,"%s", cd[i].genero);
				fprintf(cadastros,"|");
				break;
			}
			else if (genero1 == 3)
			{
				snprintf(cd[i].genero, sizeof(cd[i].genero), "Anonino");
				fprintf(cadastros,"%s", cd[i].genero);
				fprintf(cadastros,"|");
				break;
			}
			else 
			{
				printf("\nCodigo invalido! Responda novamente.");
			}
			
			}
			
			
			while(1)//estudante
			{
				printf("\nVoce e estudante?(s/n): ");
				scanf("%s", &estudante1);
				
				if (strcmp(estudante1,"s")==0)
				{
					snprintf(cd[i].estudante, sizeof(cd[i].estudante), "Estudante");
					fprintf(cadastros, "%s", cd[i].estudante);
					fprintf(cadastros,"|");
					break;
				}
				else if (strcmp(estudante1,"n")==0)
				{
					snprintf(cd[i].estudante, sizeof(cd[i].estudante), "Nao estudante");
					fprintf(cadastros, "%s", cd[i].estudante);
					fprintf(cadastros,"|");
					break;
				}
				else 
				{
					printf("Caracter invalido! Responda novamente.");
				}
			}
			
			while(1)//pcd
			{
				printf("\nVoce e PCD?(s/n): ");
				scanf("%s", &pcd1);
				
				if (strcmp(pcd1,"s")==0)
				{
					snprintf(cd[i].pcd, sizeof(cd[i].pcd), "PCD");
					fprintf(cadastros, "%s", cd[i].pcd);
					fprintf(cadastros,"|");
					break;
				}
				else if (strcmp(pcd1,"n")==0)
				{
					snprintf(cd[i].pcd, sizeof(cd[i].pcd), "Nao PCD");
					fprintf(cadastros, "%s", cd[i].pcd);
					fprintf(cadastros,"|");
					break;
				}
				else 
				{
					printf("Caracter invalido! Responda novamente.");
				}
			}
			
			while(1)//associado
			{
				printf("\nVoce e associado do museu?(s/n): ");
				scanf("%s", &associado1);
				
				if (strcmp(associado1,"s")==0)
				{
					snprintf(cd[i].associado, sizeof(cd[i].associado), "Associado");
					fprintf(cadastros, "%s", cd[i].associado);
					fprintf(cadastros,"|");
					break;
				}
				else if (strcmp(associado1,"n")==0)
				{
					snprintf(cd[i].associado, sizeof(cd[i].associado), "Nao associado");
					fprintf(cadastros, "%s", cd[i].associado);
					fprintf(cadastros,"|");
					break;
				}
				else 
				{
					printf("Caracter invalido! Responda novamente.");
				}
			}
	
	fprintf(cadastros,"\n\n");
	
	printf("\nObrigada por se cadastrar! :) Em 2 segundos voltara ao menu ");
	sleep(2);


	fclose(cadastros);
			
	}
	
}

void bilheteria()
{
	FILE *cadastros, *vendas;
	
	int i = 0;
	char vcpf[15];
	
	top();
	printf("-----------BILHETERIA-------------\n");
	
	cadastros = fopen ("cadastro_cliente.txt","r");
	vendas = fopen ("venda.txt", "a");
	
	if (cadastros == NULL)
	{
		printf("Erro ao abrir o arquivo cadastros!");
	}
	else
	{
		if(vendas == NULL)
		{
			printf("Erro ao abrir o arquivo vendas!");
		}
		else 
		{
			printf("Digite seu CPF: ");
			scanf("%s", &vcpf);
			
			for(i = 0; i<100; i++)
			{
				if(strcmp(vcpf,cd[i].cpf)==0)
				{
					printf("\nSeu cadastro:\n\n");
					printf("Nome: %s", cd[i].nome);//nome
					strcpy(vd[i].vnome, cd[i].nome);//copiando nome de cadastro para nome de vendas
					fprintf(vendas,"%s",vd[i].vnome);
					fprintf(vendas, "|");
					
					printf("\nCPF: %s", cd[i].cpf);
					strcpy(vd[i].vcpf, cd[i].cpf);
					fprintf(vendas,"%s",vd[i].vcpf);
					fprintf(vendas, "|");
					
					printf("\nNumero de telefone: %s", cd[i].telefone);
					strcpy(vd[i].vtelefone, cd[i].telefone);
					fprintf(vendas,"%s",vd[i].vtelefone);
					fprintf(vendas, "|");
					
					printf("\nIdade: %i", cd[i].idade);
					(vd[i].vidade == cd[i].idade);
					fprintf(vendas,"%s",vd[i].vidade);
					fprintf(vendas, "|");
					
					printf("\n%s", &cd[i].beneficio_idade);
					strcpy(vd[i].beneficio_idade, cd[i].beneficio_idade);
					fprintf(vendas,"%s",vd[i].beneficio_idade);
					fprintf(vendas, "|");
					
					printf("\nGenero: %s", cd[i].genero);
					strcpy(vd[i].vgenero, cd[i].genero);
					fprintf(vendas,"%s",vd[i].vgenero);
					fprintf(vendas, "|");
					
					if (strcmp(cd[i].estudante,"Estudante")==0)
					{
						printf("\nEstudante.");
					}
					else;
					strcpy(vd[i].vestudante, cd[i].estudante);
					fprintf(vendas,"%s",vd[i].vestudante);
					fprintf(vendas, "|");
					
					if (strcmp(cd[i].pcd, "PCD")==0)
					{
						printf("PCD.");
					}
					else;
					strcpy(vd[i].vpcd, cd[i].pcd);
					fprintf(vendas,"%s",vd[i].vpcd);
					fprintf(vendas, "|");
					
					if(strcmp(cd[i].associado,"Associado")==0)
					{
						printf("Associado.");
					}
					else;
					strcpy(vd[i].vassociado, cd[i].associado);
					fprintf(vendas,"%s",vd[i].vassociado);
					fprintf(vendas, "|");
					
					printf("\n\nEm dez segundos vamos a ala de compra! :)");
					sleep(2);
					escolha();
				}
				else
				{
					printf("Cliente nao encontrado...");
					sleep(2);
					return;
				}
			}
			
		}
	}
	
	fprintf(vendas, "\n\n");
	fclose(cadastros);
	fclose(vendas);
}
void escolha()
{
	FILE*vendas;
	int quantidade;
	int escolha1;
	vendas = fopen("venda.txt", "r+");
	int i = 0;
	
	if (vendas = NULL)
	{
		printf("Erro ao abrir arquivo");
	}
	else 
	{
		system ("cls");
		top();
		printf("-----------BILHETERIA-------------\n");
		printf("---------ALA DE COMPRAS-----------\n");
		printf("\nQuantas exposicoes deseja comprar?");
		scanf("%i", &quantidade);
		vd[i].quantidade = quantidade;
		fprintf(vendas,"%s exposicao(oes)",vd[i].quantidade);
		fprintf(vendas, "|");
		
			for (i=0; i < quantidade; i++)
		{
			printf("1-Comprar exposicao 100 anos da semana da arte moderna.\n2-Comprar exposicao 150 anos de Santos Drumont.\n3-Comprar exposicao Jogos Olimpicos Paris 2024.");
			printf("\n4-Comprar exposicao Inteligencia artificial.\nEscolha: ");
			scanf("%i", &escolha1);
			
			if (escolha1 == 1)
			{
			
					system ("cls");
					top();
					printf("-----------BILHETERIA-------------\n");
					printf("---------ALA DE COMPRAS-----------\n");
					
					snprintf(vd[i].vexposicao, sizeof(vd[i].vexposicao),"100 anos da semana da arte moderna");
					fprintf(vendas,"%s", vd[i].vexposicao);
					fprintf(vendas,"|");
					
					
					printf("Voce escolheu a exposicao '100 anos da semana de arte moderna'");
					printf("\n\nO valor do ingresso e R$20.00.\nCaso tenha algum beneficio vai ser aplicado quando finalizar a escolha.\n\n");
					sleep(1);
			}
			else if (escolha1 == 2)
			{
				system ("cls");
				top();
					printf("-----------BILHETERIA-------------\n");
					printf("---------ALA DE COMPRAS-----------\n");
					
					snprintf(vd[i].vexposicao, sizeof(vd[i].vexposicao),"'150 anos de Santos Drumont'");
					fprintf(vendas,"%s", vd[i].vexposicao);
					fprintf(vendas,"|");
					
					
					printf("Voce escolheu a exposicao '150 anos de Santos Drumont");
					printf("\n\nO valor do ingresso e R$30.00.\nCaso tenha algum beneficio vai ser aplicado quando finalizar a escolha.\n\n");
					sleep(1);
			}
			else if (escolha1 == 3)
			{
				system ("cls");
				top();
					printf("-----------BILHETERIA-------------\n");
					printf("---------ALA DE COMPRAS-----------\n");
					
					snprintf(vd[i].vexposicao, sizeof(vd[i].vexposicao),"'Jogos Olimpicos de Paris 2024'");
					fprintf(vendas,"%s", vd[i].vexposicao);
					fprintf(vendas,"|");
					
					
					printf("Voce escolheu a exposicao 'Jogos Olimpicos de Paris 2024");
					printf("\n\nO valor do ingresso e R$40.00.\nCaso tenha algum beneficio vai ser aplicado quando finalizar a escolha.\n\n");
					sleep(1);
			}
			else if (escolha1 == 4)
			{
				system ("cls");
				top();
					printf("-----------BILHETERIA-------------\n");
					printf("---------ALA DE COMPRAS-----------\n");
					
					snprintf(vd[i].vexposicao, sizeof(vd[i].vexposicao),"'Inteligencia artificial'");
					fprintf(vendas,"%s", vd[i].vexposicao);
					fprintf(vendas,"|");
					
					
					printf("Voce escolheu a exposicao 'Inteligencia artificial");
					printf("\n\nO valor do ingresso e R$50.00.\nCaso tenha algum beneficio vai ser aplicado quando finalizar a escolha.\n\n");
					sleep(1);
			}
			else
			{
				printf("Numero invalido, tente novamente!");
				return;
			}
			
		}//for
		
		
		printf("\n\nEm 5 segundos vamos finalizar a compra! :)");
		sleep(1);
		finalizar_compra();
	
		
	}
	fprintf(vendas, "\n\n");
	fclose (vendas);
}

void finalizar_compra()
{
    FILE *vendas;
    int quantidade1;
    vendas = fopen("venda.txt", "r+");
    quantidade1 = vd[i].quantidade;

    if (vendas == NULL)
    {
        printf("Erro ao encontrar arquivo!");
        sleep(1);
        return;
    }
    else
    {
        system("cls");
        top();
        printf("-----------BILHETERIA-------------\n");
        printf("---------COMPRA FINALIZADA    -----------\n");

        int preco_final = 0;

        // Loop para calcular o preço final
        for (int i = 0; i < quantidade1; i++)
        {
            printf("\nResumo da compra %d:\n", i + 1);
            printf("Exposicao escolhida: %s\n", vd[i].vexposicao);

            if (strcmp(vd[i].vexposicao, "100 anos da semana da arte moderna") == 0)
            {	
            	//fprintf(vendas,"%s",vd[i].vexposicao);
            	//fprintf(vendas,"|");
                preco_final += 20;
            }
            else if (strcmp(vd[i].vexposicao, "'150 anos de Santos Drumont'") == 0)
            {
            	//fprintf(vendas,"%s",vd[i].vexposicao);
            	//fprintf(vendas,"|");
                preco_final += 30;
            }
            else if (strcmp(vd[i].vexposicao, "'Jogos Olimpicos de Paris 2024'") == 0)
            {
            	//fprintf(vendas,"%s",vd[i].vexposicao);
            	//fprintf(vendas,"|");
                preco_final += 40;
            }
            else if (strcmp(vd[i].vexposicao, "'Inteligencia artificial'") == 0)
            {
            	//fprintf(vendas,"%s",vd[i].vexposicao);
            	//fprintf(vendas,"|");
                preco_final += 50;
            }
        }
        
        
		
		strcpy(ad[i].exposicao, vd[i].vexposicao);
        
        printf("\nValor final: %i\n", preco_final);
        
		
		
		if (strcmp(vd[i].vassociado,"Associado")==0)
		{
			preco_final  = 0; 
			vd[i].vpreco = preco_final;
        fprintf(vendas,"%i",vd[i].vpreco);
        fprintf(vendas,"|");
		
			printf("Beneficio: ASSOCIADO/ISENTO\n");
			printf("Valor com desconto: %i", preco_final);
		}
		else if (strcmp(vd[i].beneficio_idade,"Menor de idade")==0)
		{
			preco_final = preco_final / 2;
			vd[i].vpreco = preco_final;
        fprintf(vendas,"%i",vd[i].vpreco);
        fprintf(vendas,"|");
		
			printf("Beneficio: MENOR DE 18 ANOS/MEIA ENTRADA\n");
			printf("Valor com desconto: %i", preco_final);
		}
		else if (strcmp(vd[i].beneficio_idade,"Maior idade")==0)
		{
			preco_final = preco_final / 2;
			
			vd[i].vpreco = preco_final;
        fprintf(vendas,"%i",vd[i].vpreco);
        fprintf(vendas,"|");
		
			printf("Beneficio: MAIOR DE 65 ANOS/MEIA ENTRADA\n");
			printf("Valor com desconto: %i", preco_final);
		}
		else if(strcmp(vd[i].vestudante,"Estudante")==0)
		{
			preco_final = preco_final / 2;
			
			vd[i].vpreco = preco_final;
        fprintf(vendas,"%i",vd[i].vpreco);
        fprintf(vendas,"|");
			printf("Beneficio: ESTUDANTE/MEIA ENTRADA\n");
			printf("Valor com desconto: %i", preco_final);
		}
		else if(strcmp(vd[i].vpcd,"PCD")==0)
		{
			preco_final = preco_final / 2;
			vd[i].vpreco = preco_final;
        fprintf(vendas,"%i",vd[i].vpreco);
        fprintf(vendas,"|");
			printf("Beneficio: PCD/MEIA ENTRADA\n");
			printf("Valor com desconto: %i", preco_final);
		}
		else;
		
		
		
				
		printf("\nEm 5 segundos voltaremos ao menu! :)");
		sleep(5);
		return;
    }
    fprint(vendas, "\n\n");
    fclose(vendas);
}

void avaliar()
{
	FILE *vendas, *avaliacao;
    char cpf[15];
    int quantidade1;
    int escolha;

    avaliacao = fopen("avaliacoes.txt", "a");
	vendas = fopen ("venda.txt","r");
    quantidade1 = vd[i].quantidade;

    if (vendas == NULL)
    {
        printf("Erro na abertura do arquivo.\n");
        sleep(2);
    }
    else
    
	{
    	if (avaliacao == NULL)
    	{
    		printf("Erro na abertura do arquivo.\n");
    		sleep(2);
		}
		else
		{
			system ("cls");
			top();
        	printf("\n----------AVALIAR---------\n");
        	printf("Digite seu CPF: ");
        	scanf("%s", cpf);
		
        int preco_final = 0;

        	// Loop para calcular o preço final
	        for (int i = 0; i < quantidade1; i++)
	        {
	            printf("\nResumo da compra %d:\n", i + 1);
	            printf("Exposicao escolhida: %s\n", vd[i].vexposicao);
	
	            if (strcmp(vd[i].vexposicao, "100 anos da semana da arte moderna") == 0)
	            {	
	            	printf("\nDIGITE 1 PARA AVALIAR '100 anos da semana da arte moderna'.v");
	            }
	            else if (strcmp(vd[i].vexposicao, "'150 anos de Santos Drumont'") == 0)
	            {
	            	printf("\nDIGITE 2 PARA AVALIAR '150 anos de Santos Drumont'.\n");
	            }
	            else if (strcmp(vd[i].vexposicao, "'Jogos Olimpicos de Paris 2024'") == 0)
	            {
	            	printf("\nDIGITE 3 PARA AVALIAR 'Jogos Olimpicos de Paris 2024'.\n");
	            }
	            else if (strcmp(vd[i].vexposicao, "'Inteligencia artificial'") == 0)
	            {
	            	printf("\nDIGITE 4 PARA AVALIAR 'Inteligencia artificial'.\n");
	            }
	            else
	            {
	            	printf("\nDIGITE 5 PARA VOLTAR.\n");
				}
        	}//for
			
			printf("\n\nDigite: ");
			scanf("%i", &escolha);
			
			switch (escolha)
			{
				case 1: 
					avaliacao_100anos();
				break;
				
				case 2:
					avaliacao_150santo();
				break;
				
				case 3:
					avaliacao_copa();
				break;
				
				case 4: 
					avaliacao_ia();
				break;
				
				case 5:
					return;
				break;
			}//switch
		}//elseavaliacao
	}//elsevendas
	fclose (vendas);
	fclose(avaliacao);
}

void avaliacao_100anos()
{
	FILE*avaliacao, *vendas;
	char continuar[2];
	top();
	
	avaliacao = fopen("avaliacoes.txt", "a");
	vendas = fopen ("venda.txt","r");
	
	if(vendas == NULL)
	{
		printf("Erro ao abrir arquivo!");
		sleep(2);
		return;
	}
	else
	{
		if(avaliacao == NULL)
		{
			printf("Erro ao abrir arquivo!");
			sleep(2);
			return;
		}
		else
		{
			system ("cls");
			printf("--------AVALIACAO--------\n\n");
			printf("Exposicao escolhida: '100 anos da semana de arte moderna'");
			snprintf(ad[i].exposicao, sizeof(ad[i].exposicao),"100 anos da semana da arte moderna");
			fprintf(avaliacao, "|");
			printf("\nDe 0 a 10 quanto gostou: ");
			scanf("%f", &ad[i].gostou);
			fprintf(avaliacao,"%f",ad[i].gostou);
			fprintf(avaliacao,"|");
			printf("\nDe 0 a 10 quanto achou util: ");
			scanf("%f", &ad[i].util);
			fprintf(avaliacao,"%f",ad[i].util);
			fprintf(avaliacao,"|");
			printf("\nDe 0 a 10 quanto recomenaria: ");
			scanf("%f", &ad[i].recomenda);
			fprintf(avaliacao,"%f",ad[i].recomenda);
			fprintf(avaliacao,"|");
			sleep(1);
			
			
			while(1)
			{
			printf("\nObrigada pela avaliacao! Gostaria de avaliar alguma outra exposicao?(s/n) ");
			scanf("%s", &continuar);
			if(strcmp(continuar,"s")==0)
			{
				avaliar();
			}
			else if (strcmp(continuar,"n")==0)
			{
				printf("Aguarde 2 segunbdo que ira para o menu! :)");
				sleep(2);
				return;
			}
			else
			{
				printf("Errado! Tente novamente");
			}
			}
		}
	}
	fprintf(avaliacao,"\n\n");
	fclose(avaliacao);
	fclose(vendas);
}

